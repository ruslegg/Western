<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="720.0" maxWidth="1280.0" minHeight="720.0"
      minWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="Controllers.Student.SubjectLeaderBoardController">
    <children>
        <Label fx:id="subjectLabel" text="Subject Name">
            <padding>
                <Insets/>
            </padding>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </Label>
        <TableView fx:id="subjectLeaderBoardTableView" maxHeight="600.0" maxWidth="900.0" prefHeight="600.0"
                   prefWidth="900.0">
            <columns>
                <TableColumn fx:id="studentId" minWidth="300.0" prefWidth="300.0" text="ID"/>
                <TableColumn fx:id="studentName" minWidth="300.0" prefWidth="300.0" text="Student"/>
                <TableColumn fx:id="studentScore" minWidth="300.0" prefWidth="300.0" text="Score"/>
            </columns>
        </TableView>
        <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toChosenGameMenu" text="Back">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
