<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.SubjectLeaderBoardController">
   <children>
      <Label fx:id="subjectLabel" text="Subject Name">
         <padding>
            <Insets />
         </padding>
      </Label>
      <TableView fx:id="subjectLeaderBoardTableView" >
        <columns>
            <TableColumn fx:id="studentId" text="ID" />
          <TableColumn fx:id="studentName" text="Student" />
          <TableColumn fx:id="studentScore" text="Score" />
        </columns>
      </TableView>
      <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toChosenGameMenu" text="Back" />
   </children>
</VBox>
