<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.RegisterController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
      <ColumnConstraints hgrow="SOMETIMES" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER"  GridPane.columnIndex="1" GridPane.halignment="RIGHT">
         <children>
          <TextField fx:id="firstName" promptText="First Name" />
          <TextField id="name" fx:id="lastName" promptText="Last Name" />
          <TextField id="user" fx:id="username" promptText="Username" />
          <PasswordField fx:id="password" promptText="Password" />
            <ComboBox fx:id="classComboBox" promptText="Class" />
            <ComboBox fx:id="classLetterComboBox" promptText="Letter" />
          <Button fx:id="signUpButton" mnemonicParsing="false" onMouseClicked="#registerAccount" text="Sign Up" />
          <Button id="backButton" mnemonicParsing="false" onMouseClicked="#showLoginDialog" text="Back" />
         </children>
         <padding>
            <Insets />
         </padding>
      </VBox>
   </children>
</GridPane>
