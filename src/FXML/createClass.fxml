<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Teacher.CreateClassController">
   <children>
      <HBox alignment="CENTER" >
         <children>
            <Label text="Class number" />
            <TextField fx:id="classNumber" alignment="CENTER" promptText="6" />
         </children>
      </HBox>
      <HBox alignment="CENTER" >
         <children>
            <Label text="Class letter" />
            <TextField fx:id="classLetter" alignment="CENTER" promptText="A" />
         </children>
      </HBox>
      <Button fx:id="submitButton" mnemonicParsing="false" onMouseClicked="#createClass" text="Submit" />
      <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toCreateMenu" text="Back" />
   </children>
</VBox>
