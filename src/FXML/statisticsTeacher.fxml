<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Teacher.StatisticsTeachersController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="500.0">
         <children>
              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="143.0" text="Competition">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
              <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Contests">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="600.0" prefWidth="200.0">
         <children>
              <TableView fx:id="competitionTableView" prefHeight="350.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="competitionId" prefWidth="100.0" text="Competition ID" />
                  <TableColumn fx:id="competitionName" prefWidth="100.0" text="Competition Subject" />
                  <TableColumn fx:id="competitionNumber" prefWidth="100.0" text="Number of students" />
               </columns>
            </TableView>
              <TableView fx:id="contestsTableView" prefHeight="350.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="contestId" prefWidth="100.0" text="Contest ID" />
                  <TableColumn fx:id="contestName" prefWidth="100.0" text="Contest Subject" />
                  <TableColumn fx:id="contestNumber" prefWidth="100.0" text="Number" />
               </columns>
            </TableView>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <BarChart fx:id="barChart">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
        <Button fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#toMainMenu" prefHeight="27.0" prefWidth="113.0" text="Back" />
   </children>
</VBox>
