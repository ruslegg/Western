<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.UserTeamInformation">
   <children>
      <HBox alignment="CENTER" >
         <children>
            <Label text="Leaderboard" />
            <Label text="Members" />
            <Label fx:id="requestLabel" text="Requests" />
         </children>
      </HBox>
      <HBox alignment="CENTER" >
         <children>
            <TableView fx:id="teamLeaderBoardTableView" >
              <columns>
                <TableColumn fx:id="teamName" text="Team Name" />
                <TableColumn fx:id="teamPoints" sortType="DESCENDING" text="Team Points" />
              </columns>
            </TableView>
            <TableView fx:id="teamMembersTableView" >
              <columns>
                <TableColumn fx:id="teamMember" editable="false" sortable="false" text="Team Member" />
                <TableColumn fx:id="memberPoints" editable="false" sortType="DESCENDING" text="Points" />
              </columns>
            </TableView>
            <TableView fx:id="teamRequestsTableView" >
              <columns>
                <TableColumn fx:id="requestId" text="Student ID" />
                  <TableColumn fx:id="requestName" text="Student name" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <ButtonBar >
        <buttons>
          <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toMainMenu" text="Back" />
            <Button fx:id="approveButton" mnemonicParsing="false" onMouseClicked="#approveRequest" text="Approve" />
        </buttons>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
