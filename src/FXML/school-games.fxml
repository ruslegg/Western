<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="100.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SchoolGames">
   <children>
      <HBox alignment="CENTER" prefHeight="600.0">
         <children>
            <TableView fx:id="contestTableView" prefHeight="200.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="contestSubject" prefWidth="75.0" text="Subject" />
                  <TableColumn fx:id="daysLeft" prefWidth="75.0" text="Days left" />
               </columns>
            </TableView>
            <TableView fx:id="competitionTableView" prefHeight="200.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="competitionSubject" prefWidth="75.0" text="Subject" />
               </columns>
            </TableView>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toMainMenu" text="Back" />
          <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#playGame" text="Play" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
