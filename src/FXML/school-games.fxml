<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER"  xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.SchoolGames">
   <children>
      <HBox alignment="CENTER" >
         <children>
            <Label text="Contest" />
            <Label text="Competition" />
         </children>
      </HBox>
      <HBox alignment="CENTER" >
         <children>
            <TableView fx:id="contestTableView" >
               <columns>
                  <TableColumn fx:id="contestId" text="ID" />
                  <TableColumn fx:id="contestSubject" text="Subject" />
                  <TableColumn fx:id="daysLeft" text="Days left" />
               </columns>
            </TableView>
            <TableView fx:id="competitionTableView" >
               <columns>
                  <TableColumn fx:id="competitionId" text="ID" />
                  <TableColumn fx:id="competitionSubject" text="Subject" />
               </columns>
            </TableView>
         </children>
      </HBox>
      <ButtonBar >
        <buttons>
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toMainMenu" text="Back" />
          <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#playGame" text="Play" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
