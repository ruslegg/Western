<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.StatisticsController">
   <children>
      <HBox alignment="CENTER" minHeight="50.0" prefHeight="50.0" prefWidth="200.0" spacing="500.0">
         <children>
            <Label fx:id="leaderboardButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="100.0" text="Leaderboard" />
            <Label fx:id="contestRankButton" alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Contest Rank" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="600.0" prefWidth="200.0" spacing="20.0">
         <children>
            <TableView fx:id="statisticsLeaderBoardTableView" prefHeight="350.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="leaderBoardStudent" prefWidth="75.0" text="Student" />
                  <TableColumn fx:id="leaderBoardPoints" prefWidth="75.0" text="Points" />
               </columns>
            </TableView>
            <TableView fx:id="statisticsContestRankTableView" prefHeight="350.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="contestId" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="contestSubject" prefWidth="75.0" text="Subject" />
                  <TableColumn fx:id="contestRank" prefWidth="75.0" text="Rank" />
               </columns>
            </TableView>
         </children>
      </HBox>
      <LineChart fx:id="lineChart" title="Competition Statistics">
        <xAxis>
          <CategoryAxis label="Subject" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis minorTickVisible="false" side="LEFT" tickMarkVisible="false" />
        </yAxis>
      </LineChart>
      <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toMainMenu" prefHeight="27.0" prefWidth="113.0" text="Back" />
   </children>
</VBox>
