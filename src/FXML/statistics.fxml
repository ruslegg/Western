<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.StatisticsController">
   <children>
      <HBox alignment="CENTER" >
         <children>
            <Label fx:id="leaderboardButton" alignment="CENTER" contentDisplay="CENTER" text="Leaderboard" />
            <Label fx:id="contestRankButton" alignment="CENTER" text="Contest Rank" />
         </children>
      </HBox>
      <HBox alignment="CENTER" >
         <children>
            <TableView fx:id="statisticsLeaderBoardTableView" >
               <columns>
                  <TableColumn fx:id="leaderBoardStudent" text="Student" />
                  <TableColumn fx:id="leaderBoardPoints" text="Points" />
               </columns>
            </TableView>
            <TableView fx:id="statisticsContestRankTableView" >
               <columns>
                  <TableColumn fx:id="contestId" text="ID" />
                  <TableColumn fx:id="contestSubject" text="Subject" />
                  <TableColumn fx:id="contestRank" text="Rank" />
               </columns>
            </TableView>
         </children>
      </HBox>
      <LineChart fx:id="lineChart" title="Competition Statistics">
        <xAxis>
          <CategoryAxis label="Subject" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis minorTickVisible="false" side="LEFT" tickMarkVisible="false" />
        </yAxis>
      </LineChart>
      <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toMainMenu" text="Back" />
   </children>
</VBox>
