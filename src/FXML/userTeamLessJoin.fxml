<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.UserTeamLessJoin">
   <children>
      <TableView fx:id="joinTeamTableView" >
        <columns>
          <TableColumn fx:id="teamName" text="Team Name" />
          <TableColumn fx:id="teamAbbreviation" text="Team Abbreviation" />
        </columns>
      </TableView>
      <ButtonBar >
        <buttons>
          <Button fx:id="requestButton" mnemonicParsing="false" onMouseClicked="#requestJoin" text="Request" />
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toTeamLessOptions" text="Back" />
        </buttons>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
