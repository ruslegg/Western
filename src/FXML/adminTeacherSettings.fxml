<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="720.0" minWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Admin.AdminTeacherSettings">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="600.0">
         <children>
            <Label text="Teachers">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label text="Requests">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" minWidth="-Infinity" spacing="50.0">
         <children>
            <TableView fx:id="teacherTableView" minHeight="600.0" minWidth="600.0">
               <columns>
                  <TableColumn fx:id="teacherName" minWidth="200.0" prefWidth="200.0" text="Name" />
                  <TableColumn fx:id="teacherCompetitions" minWidth="200.0" prefWidth="200.0" text="Competitions" />
                  <TableColumn fx:id="teacherContests" minWidth="200.0" prefWidth="200.0" text="Contests" />
               </columns>
            </TableView>
            <TableView fx:id="teacherRequestsTableView" minHeight="600.0" minWidth="600.0">
              <columns>
                <TableColumn fx:id="name" minWidth="600.0" text="Name" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <ButtonBar buttonMinWidth="170.0">
        <buttons>
            <Button fx:id="approveButton" minHeight="0.0" mnemonicParsing="false" onMouseClicked="#approveRequest" text="Approve" />
            <Button fx:id="deleteButton" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onMouseClicked="#deleteRequest" text="Delete" />
          <Button fx:id="backButton" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onMouseClicked="#toAdminMainMenu" text="Back" />
        </buttons>
         <VBox.margin>
            <Insets right="10.0" top="10.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
