<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Admin.AdminTeacherSettings">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="200.0">
         <children>
            <TableView fx:id="teacherTableView" prefHeight="200.0" prefWidth="620.0">
               <columns>
                  <TableColumn fx:id="teacherName" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="teacherCompetitions" prefWidth="75.0" text="Competitions" />
                  <TableColumn fx:id="teacherContests" prefWidth="75.0" text="Contests" />
               </columns>
            </TableView>
            <TableView fx:id="teacherRequestsTableView" prefHeight="200.0" prefWidth="620.0">
              <columns>
                <TableColumn fx:id="name" prefWidth="75.0" text="Name" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="approveButton" mnemonicParsing="false" onMouseClicked="#approveRequest" text="Approve" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onMouseClicked="#deleteRequest" text="Delete" />
          <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toAdminMainMenu" text="Back" />
        </buttons>
         <padding>
            <Insets right="20.0" />
         </padding>
      </ButtonBar>
   </children>
</VBox>
