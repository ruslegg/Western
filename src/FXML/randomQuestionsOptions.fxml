<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.RandomQuestionsOptionsController">
   <children>
      <Label text="Select number of desired questions" />
      <HBox alignment="CENTER" >
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#minusOne" text="-1" />
            <Button mnemonicParsing="false" onMouseClicked="#minusTen" text="-10" />
            <TextField fx:id="numberTextField" alignment="CENTER" text="0" />
            <Button mnemonicParsing="false" onMouseClicked="#plusOne" text="+1" />
            <Button mnemonicParsing="false" onMouseClicked="#plusTen" text="+10" />
         </children>
      </HBox>
      <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#play" text="Play">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
   </children>
</VBox>
