<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Student.RandomQuestionsOptionsController">
   <children>
      <Label text="Select number of desired questions" />
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#minusOne" text="-1" />
            <Button mnemonicParsing="false" onMouseClicked="#minusTen" text="-10" />
            <TextField fx:id="numberTextField" alignment="CENTER" text="0" />
            <Button mnemonicParsing="false" onMouseClicked="#plusOne" text="+1" />
            <Button mnemonicParsing="false" onMouseClicked="#plusTen" text="+10" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toChooseGameType" text="Back" />
            <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#play" text="Play" />
         </children>
      </HBox>
   </children>
</VBox>
